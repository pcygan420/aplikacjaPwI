
@{
    ViewBag.Title = "Game";
}

<main role="main" id="main-container">
    <section id="second-section">
        <div class="game-info">
            <div class="turn"><span>@Html.Raw(Zadanie8_PawełCygan.Resources.Game.Move)</span><span id="turn-info"> @Html.Raw(Zadanie8_PawełCygan.Resources.Game.Circle)</span></div>
            <div class="stats">
                <div class="circle-info">@Html.Raw(Zadanie8_PawełCygan.Resources.Game.CircleW) : <span id="circle"></span></div>
                <div class="cross-info">@Html.Raw(Zadanie8_PawełCygan.Resources.Game.CrossW) : <span id="cross"></span></div>
                <div class="draw-info">@Html.Raw(Zadanie8_PawełCygan.Resources.Game.Draw) : <span id="draw"></span></div>
            </div>
        </div>
        <div class="game-space">
            <table class="game-table">
                <tr>
                    <td id="00" onClick="Move(this)"></td>
                    <td id="01" onClick="Move(this)"></td>
                    <td id="02" onClick="Move(this)"></td>
                </tr>
                <tr>
                    <td id="10" onClick="Move(this)"></td>
                    <td id="11" onClick="Move(this)"></td>
                    <td id="12" onClick="Move(this)"></td>
                </tr>
                <tr>
                    <td id="20" onClick="Move(this)"></td>
                    <td id="21" onClick="Move(this)"></td>
                    <td id="22" onClick="Move(this)"></td>
                </tr>
            </table>
        </div>
    </section>
</main>


